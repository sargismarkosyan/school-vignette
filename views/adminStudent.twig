{% extends 'adminLayout.twig' %}

{% block body %}
	<label for='name'>Անուն</label>
	<input type='text' value='{{student.name}}' id="name" name='name'>
  <label for='image'>Նկար</label>
	<input type='file' id='image' onchange='readFile()' name='image'>
	<label for='quote'>Մեջբերում</label>
	<input type='text' value='{{student.year}}' id="quote" name='quote'>
	<label for='class'>Դասարան</label>
	<select id='class' name='class'>
		{% for classroom in classrooms %}
			<option value='{{classroom.year}}' {% if classroom.year == student.class %} selected {% endif %}>{{classroom.name}}</option>
		{% endfor %}
	</select>
	<div id='body'>
		{{student.body}}
	</div>
	<script>
		var body = new Quill('#body', {theme: 'snow'});
	</script>
	<button {% if student %} onclick='saveStudent({{class.id}})' {% else %} onclick='addStudent()' {% endif %}>
		Պահպանել</button>
{% endblock %}
